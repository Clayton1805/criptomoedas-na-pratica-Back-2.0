{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "typescript": {},
            "node": {
                "node": {
                    "extensions": [".js", ".jsx", ".ts", ".tsx"]
                }
            }
        }
    },
    "rules": {
        "import/extensions": "off",
        "import/prefer-default-export": "off",
        "prefer-promise-reject-errors": "off"
    }
}
